.nav_mobile
  clip-path: inset(0 100% 0 0);
  background-color: rgba(0,0,0,.8)
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  transition: clip-path 1s ease-in-out;

.nav_mobile_wrapper
  background-color: var(--white)
  min-height: 100vh
  width: 60%
  padding: 25px

.nav_mobile_btn
  background-color: transparent
  border: none
  outline: none
  cursor pointer
  margin-bottom: 30px

.nav_mobile_menu
  list-style: none

  .menuItem:hover::after
    background-color: transparent

  .navLink
    color: var(--black)
    font-weight: var(--font_bold)
    line-height: 3

.nav_mobile_active
  clip-path: inset(0 0 0 0);